<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kratos18.kratos2k18.MarkQRActivity">

    <TextView
        android:id="@+id/tvtvscanqr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Type UUID and Scan"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:textColor="@color/colorPrimaryDark" />
    <!-- UUID -->

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvtvscanqr"
        android:layout_margin="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="KR-"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />


        <EditText
            android:id="@+id/input_uuid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone number"
            android:inputType="number" />


    </LinearLayout>


    <LinearLayout
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true" android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <Button
            android:layout_gravity="center"
            style="@style/Widget.AppCompat.Button.Colored"
            android:id="@+id/btn_checkredundancy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Check Redundancy" />

        <Button
            android:layout_gravity="center"
            android:id="@+id/btn_setqrcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            style="@style/Widget.AppCompat.Button.Colored"
            android:text="Set QR" />
    </LinearLayout>

</RelativeLayout>
